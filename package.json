    "test:a11y": "cypress run --spec cypress/e2e/a11y.cy.js",
    "ci:lh": "lhci autorun"
  },
  "devDependencies": {
    "axe-core": "^4.7.0",
    "cypress-axe": "^1.5.0",
    "ci:lh": "lhci autorun"
  }
