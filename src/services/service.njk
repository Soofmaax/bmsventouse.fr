---
pagination:
  data: services
  size: 1
  alias: service
permalink: "/services/{{ service.slug }}/"
eleventyComputed:
  title: "{{ service.metaTitle }}"
  description: "{{ service.metaDescription }}"
  heroImage: "{{ service.hero.desktop }}"
  ogImage: "{{ site.url }}{{ service.hero.desktop }}"
---
{% from "../_includes/components/hero.njk" import hero %}
{% import "../_includes/components/macros.njk" as macros %}

{% call hero(
  imageDesktop=service.hero.desktop,
  imageMobile=service.hero.mobile,
  alt=service.hero.alt,
  loading='eager',
  width=1920,
  height=1080
) %}
  <h1>{{ service.h1 }}</h1>
  <p>{{ service.summary }}</p>
{% endcall %}

{% for section in service.sections %}
<section class="section">
  <div class="container">
    <h2 class="section-title">{{ section.title }}</h2>
    {{ section.html | safe }}
  </div>
</section>
{% endfor %}

{% if service.features and service.features.length %}
<section class="section">
  <div class="container">
    <h2 class="section-title">Nos atouts</h2>
    <ul class="benefits-list">
      {% for feat in service.features %}
        <li>{{ feat }}</li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endif %}

{% if service.faq and service.faq.length %}
<section class="section">
  <div class="container">
    <h2 class="section-title">Questions fr√©quentes</h2>
    <div class="faq-container">
      {% for q in service.faq %}
        {{ macros.faqItem(q.q, q.a) }}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

<section class="section cta-section">
  <div class="container animated-item">
    {{ macros.ctaButtons('/contact/', 'Demander un devis', 'https://wa.me/33646005642?text=Bonjour,%20je%20souhaite%20en%20savoir%20plus%20sur%20ce%20service.', 'WhatsApp Direct') }}
  </div>
</section>

{% block jsonld %}
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Service",
    "serviceType": "{{ service.h1 }}",
    "description": "{{ service.metaDescription }}",
    "provider": {
      "@type": "Organization",
      "name": "{{ site.brand }}",
      "url": "{{ site.url }}"
    },
    "areaServed": [
      { "@type": "Country", "name": "France" }
    ]
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      { "@type": "ListItem", "position": 1, "name": "Accueil", "item": "{{ site.url }}/" },
      { "@type": "ListItem", "position": 2, "name": "Services", "item": "{{ site.url }}/services/" },
      { "@type": "ListItem", "position": 3, "name": "{{ service.h1 }}", "item": "{{ site.url }}/services/{{ service.slug }}/" }
    ]
  }
  </script>
{% endblock %}